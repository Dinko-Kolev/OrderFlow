# =================================================
# FRONTEND SERVICE - Environment Variables Template
# =================================================

# =================================================
# API CONFIGURATION
# =================================================
NEXT_PUBLIC_API_URL=http://localhost:3001
NEXT_PUBLIC_ADMIN_API_URL=http://localhost:3003/api/admin
NEXT_PUBLIC_APP_URL=http://localhost:3000

# =================================================
# NEXT.JS CONFIGURATION
# =================================================
NEXT_TELEMETRY_DISABLED=1
NODE_ENV=development

# =================================================
# PAYMENT PROCESSING (STRIPE)
# =================================================
# Publishable key (safe to expose in frontend)
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key

# =================================================
# RECAPTCHA CONFIGURATION
# =================================================
# Site key (safe to expose in frontend)
NEXT_PUBLIC_RECAPTCHA_SITE_KEY=your_recaptcha_site_key

# =================================================
# OPTIONAL SERVICES
# =================================================
# Google Maps API Key (Required for maps functionality)
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here

# Google Analytics (Optional)
NEXT_PUBLIC_GA_ID=your_google_analytics_id_here

# =================================================
# DEVELOPMENT CONFIGURATION
# =================================================
# Enable detailed error reporting in development
NEXT_PUBLIC_ENABLE_DEBUG=true
