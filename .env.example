# =================================================
# OrderFlow Pizza Restaurant - Environment Variables Template
# =================================================
# Copy this file to .env and customize for your environment
# cp .env.example .env

# =================================================
# DATABASE CONFIGURATION
# =================================================
DB_HOST=db
DB_PORT=5432
DB_USER=pizza_user
DB_PASS=your_secure_database_password
DB_NAME=pizza_db

# =================================================
# APPLICATION SERVICES
# =================================================
# Node.js Environment (development|production|test)
NODE_ENV=development

# Service Ports
BACKEND_PORT=3001
FRONTEND_PORT=3000
ADMIN_BACKEND_PORT=3003
ADMIN_DASHBOARD_PORT=3002
PGADMIN_PORT=8081

# =================================================
# FRONTEND CONFIGURATION
# =================================================
NEXT_PUBLIC_API_URL=http://localhost:3001
NEXT_PUBLIC_ADMIN_API_URL=http://localhost:3003/api/admin
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_TELEMETRY_DISABLED=1

# =================================================
# SECURITY & AUTHENTICATION
# =================================================
# JWT Secret (Generate a secure random string for production)
# You can generate one with: openssl rand -base64 32
JWT_SECRET=your_jwt_secret_key_here

# =================================================
# EMAIL CONFIGURATION
# =================================================
SMTP_HOST=your_smtp_host
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your_email@example.com
SMTP_PASS=your_email_password

# =================================================
# PAYMENT PROCESSING (STRIPE)
# =================================================
# Get your keys from: https://dashboard.stripe.com/
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# =================================================
# RECAPTCHA CONFIGURATION
# =================================================
# Get your keys from: https://www.google.com/recaptcha/
RECAPTCHA_SITE_KEY=your_recaptcha_site_key
RECAPTCHA_SECRET_KEY=your_recaptcha_secret_key

# =================================================
# OPTIONAL SERVICES
# =================================================
# Google Maps API (for location services)
# Get from: https://console.cloud.google.com/
GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here

# Google Analytics
GOOGLE_ANALYTICS_ID=your_google_analytics_id_here

# =================================================
# RATE LIMITING & SECURITY
# =================================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# =================================================
# ADMIN CONFIGURATION
# =================================================
ADMIN_FRONTEND_URL=http://localhost:3002

# =================================================
# PGADMIN CONFIGURATION
# =================================================
PGADMIN_DEFAULT_EMAIL=admin@pizza.com
PGADMIN_DEFAULT_PASSWORD=your_secure_admin_password
PGADMIN_CONFIG_SERVER_MODE=False
